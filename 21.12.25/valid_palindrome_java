class Solution {
    public boolean isPalindrome(String s) {
        int begin = 0;
        int last = s.length()-1;
        while (begin < last) {
            Character charBegin = s.charAt(begin);
            Character charLast = s.charAt(last);

            if(!Character.isLetterOrDigit(charBegin)){
                begin++;
                continue;
            }
            if(!Character.isLetterOrDigit(charLast)){
                last--;
                continue;
            }
            if(Character.toLowerCase(charBegin) != Character.toLowerCase(charLast)){
                return false;
            }
            begin++;
            last--;
        }
        return true;
    }
}
